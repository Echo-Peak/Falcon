.editor(data-element='editor' style='display:none')
  form(data-element='editor-form')
    .title
      input(type="text" data-element='editor-title' placeholder='Enter Title')
    .body
      textarea(name="" cols="30" rows="10" data-element='editor-body' placeholder='Body')
    //.scale
      //input(type="number" min="0" max="10" maxlength='2' data-element='editor-scale' placeholder='scale of 1 - 10')
    .save
      button(type="submit" value='Add' data-element='editor-save') Add
    .exit
      button(type="button" name="button" data-element='editor-exit') Close
